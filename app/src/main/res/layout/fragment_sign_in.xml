<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".SignInFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/itqlogo" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nameTextInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        app:boxStrokeColor="#FF9800">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nameTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nombre"
                            android:maxLines="1"
                            android:textColorHighlight="#FFC107"
                            android:textColorLink="#FF9800"
                            android:textCursorDrawable="@color/colorPrimary" />
                    </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/apellidoPTextInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        app:boxStrokeColor="#FF9800">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/apellidoPTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Apellido Paterno"
                            android:maxLines="1"
                            android:textColorHighlight="#FFC107"
                            android:textColorLink="#FF9800"
                            android:textCursorDrawable="@color/colorPrimary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/apellidoMTextInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        app:boxStrokeColor="#FF9800">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/apellidoMTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Apellido Materno"
                            android:textColorHighlight="#FFC107"
                            android:textColorLink="#FF9800"
                            android:maxLines="1"
                            android:textCursorDrawable="@color/colorPrimary" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/noControlTextInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        app:boxStrokeColor="#FF9800">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/noControlTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="NÃºmero de control"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColorHighlight="#FFC107"
                            android:textColorLink="#FF9800"
                            android:textCursorDrawable="@color/colorPrimary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/noCtrolTextInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        app:boxStrokeColor="#FF9800">


                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/carrera"
                            android:background="@drawable/border"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:spinnerMode="dropdown"/>
                        <Spinner
                            android:id="@+id/semestre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:layout_weight="2"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:spinnerMode="dropdown"/>

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emailTextInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        app:boxStrokeColor="#FF9800">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/emailTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="email"
                            android:maxLines="1"
                            android:inputType="textEmailAddress"
                            android:textColorHighlight="#FFC107"
                            android:textColorLink="#FF9800"
                            android:textCursorDrawable="@color/colorPrimary" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/passwordIDTextInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        app:boxStrokeColor="#FF9800">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/passwordIDTextInputEditTextSignUp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:maxLines="1"
                            android:inputType="textPassword"
                            android:textColorLink="#FF9800" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/passwordConfirmIDTextInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        app:boxStrokeColor="#FF9800">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/passwordConfirmIDTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Confirmar Password"
                            android:maxLines="1"
                            android:inputType="textPassword"
                            android:textColorLink="#FF9800" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/signUpbutton"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Crear Cuenta" />

                </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>